<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_margin="8dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtBinomialPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="32dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imgBinomialPicture"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/txtBinomialPosition"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtRiderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imgBinomialPicture"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtHorseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtRiderName"
            app:layout_constraintLeft_toRightOf="@id/imgBinomialPicture"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtBinomialPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/colorPrimary"
            android:textSize="32dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>